<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_marginLeft="@dimen/image_view_margin_left"
            android:layout_marginTop="@dimen/image_view_margin_top"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/text_view_margin_username"
            android:paddingLeft="@dimen/text_view_username_padding_left"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>