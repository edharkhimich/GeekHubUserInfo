<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_back"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/google_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/google_profile_image"
        android:layout_width="@dimen/circle_image_google_prof_img_width"
        android:layout_height="@dimen/circle_image_google_prof_img_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/circle_image_google_prof_img_marg_top"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/google_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_view_google_user_name_mrg_top"
        android:textSize="@dimen/text_view_google_user_name_text_size" />

</LinearLayout>